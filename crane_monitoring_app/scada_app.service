[Unit]
Description=Run scada monitoring application
After=multi-user.target
BindsTo=graphical-session.target
PartOf=graphical-session.target

[Service]
User=scada
Type=simple
OnBootSec=3
TimeoutStartSec=1
Restart=always
RestartSec=1
Environment="DISPLAY=:0"
Environment="XAUTHORITY=/home/scada/.Xauthority"
WorkingDirectory=/home/scada/app/internal_v0.0.20/
ExecStart=/home/scada/app/internal_v0.0.20/crane_monitoring_app

[Install]
WantedBy=graphical.target
